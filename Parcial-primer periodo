  Nota2 = float(input("Digite su segunda nota: "))
  Nota3 = float(input("Digite su tercera nota: "))
  Nota4 = float(input("Digite su cuarta nota: "))
if notas[0]<=0 or notas[0] in letras or notas[1]<=0 or notas[1] in letras or notas[2]<=0 or notas[2] in letras or notas[3]<=0 or notas[3] in letras:
  print("Esta nota no es valida por favor coloque valores positivos y tampoco coloque letras")
  promedio = (Nota1+Nota2+Nota3+Nota4)/4
  print(f"\nEl promedio de: {Nombre} matricula: {Matricula} ES: {promedio}")
